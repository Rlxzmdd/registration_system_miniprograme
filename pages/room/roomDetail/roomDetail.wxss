/* 底部标签 */
.tag{
  border-radius: 25rpx;
  color: #454545;
  background-color: #f0f3fe;
  padding: 0 10rpx;
  margin-right: 5rpx;
  font-size: 24rpx;
}

/* 功能入口块 */
.func-card {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
}

.func-card .func {
  padding: 40rpx 24rpx;
  text-align: center;
  font-size: 28rpx;
  color: #595959;
  font-weight: 500;
}

.func text {
  display: block;
  font-weight: 600;
}

.func text[class*='icon-'] {
  font-size: 46rpx;
  margin-bottom: 8rpx;
}