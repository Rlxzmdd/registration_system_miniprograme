
.container {
  padding: 20rpx;
}
.top-card, .func-card, .content-card{
  box-shadow: 0rpx 0rpx 10rpx rgba(166,166,166,0.15);
}
.container>view {
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
}

/* 顶部信息块 */
.info-card .right {
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;
  width: 190rpx;
  border-left: 14rpx solid #d6e1ff;
}

.entrance text {
  display: block;
  text-align: center;
  font-size: 26rpx;
  color: #595959;
  font-weight: 600;
  padding-top: 10rpx;
}
/* 信息码 */
.code-content{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 500rpx;
  height: 600rpx;
}

/* 功能入口块 */
.func-card {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
}

.func-card .func {
  padding: 40rpx 24rpx;
  text-align: center;
  font-size: 28rpx;
  color: #595959;
  font-weight: 500;
}

.func text {
  display: block;
  font-weight: 600;
}

.func text[class*='icon-'] {
  font-size: 46rpx;
  margin-bottom: 8rpx;
}

/* 内容信息块 */
.content-card {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 310rpx;
}

.content-card .left {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 16rpx 28rpx;
}

.content-card .left .title {
  position: relative;
  background-color: #d6e1ff;
  height: 30rpx;
  width: 184rpx;
  margin-top: 30rpx;
}

.content-card .left .title>text {
  position: absolute;
  top: -40rpx;
  left: 14rpx;
  margin-top: 15rpx;
  font-size: 40rpx;
  color: #454545;
  font-weight: 600;
}

.content-card .left .content {
  color: #595959;
  font-weight: 600;
}

/* 申请列表 */
.record {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.record .rec-item {
  background-color: #f0f0f0;
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
  margin-bottom: 20rpx;
}

.rec-item .title,
.search-res .name {
  font-size: 40rpx;
  font-weight: 600;
  color: #595959;
  margin-bottom: 10rpx;
}

.rec-item .bottom,
.search-res .college {
  font-size: 32rpx;
  color: #b5b5b5;
}

.record .right {
  font-weight: 600;
  margin-right: -20rpx;
  margin-left: 8rpx;
}