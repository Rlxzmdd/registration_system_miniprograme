.all-box {
  background-color: #F0F0F0;
  padding-bottom: 30rpx;
}

/* 顶部切换分类 */
.header-box {
  background-color: #fff;
  border-radius: 0 0 24rpx 24rpx;
  padding: 20rpx;
  box-shadow: 0px 2rpx 4rpx 0px rgba(198, 198, 198, 0.5);
}

.header {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  height: 100rpx;
  color: #595959;
  background-color: #f4f4f4;
  font-size: 34rpx;
  font-weight: bold;
  border-radius: 20rpx;
}

.header .cate-item {
  /* position: relative; */
  padding: 14rpx 24rpx;
}

.header .curr-cate {
  color: #65A1E1;
}


/* 列表 */
.list-box {
  padding: 20rpx;
}

.list-box .page-item {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
}

.page-item .title {
  font-size: 44rpx;
  letter-spacing: 1.2px;
  font-weight: 600;
  color: #595959;
  margin-bottom: 6rpx;
}

.page-item .min-title {
  font-size: 28rpx;
  color: #CACACA;
}

.page-item .right-box .text {
  font-size: 24rpx;
  color: #595959;
  line-height: 34rpx;
  margin-top: 4rpx;
}

/* 底部按钮 */
.bottom-box {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 140rpx;
  line-height: 140rpx;
  text-align: center;
  background-color: #fff;
  box-shadow: 0px -2px 4px 2px rgba(198, 198, 198, 0.25);
  border-radius: 8px 8px 0px 0px;
  padding-bottom: constant(safe-area-inset-bottom);
  /*兼容 IOS<11.2*/
  padding-bottom: env(safe-area-inset-bottom);
  /*兼容 IOS>11.2*/
}

.button-next {
  margin: 0 20rpx;
  height: 80rpx !important;
  width: 300rpx;
}

.button-previous {
  margin: 0 20rpx;
  height: 80rpx !important;
  width: 300rpx;
}


/* 表单内容弹出层 */
.info-container {}

.info-table {
  background: #fff;
  padding: 20rpx;
  margin-top: 0;
  border-radius: 16rpx;
}

.info-table>view {
  padding: 20rpx;
  border-bottom: 1px solid #f0f0f0;
}

.info-table>view>text:nth-child(1) {
  flex: 1;
  font-size: 36rpx;
  font-weight: 600;
}

.info-table>view>text:nth-child(2) {
  flex: 3;
  font-size: 32rpx;
  text-align: right;
  /* color: #CACACA; */
}

.click{
  text-decoration: underline;
  color: #65a1e1;
}