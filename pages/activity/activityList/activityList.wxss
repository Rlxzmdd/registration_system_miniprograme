.van-cell{
  padding:var(--cell-vertical-padding,10rpx) var(--cell-horizontal-padding,6rpx) !important;
}
.van-cell-group{
  padding-left: 6rpx !important;
}
.van-cell-group__title{
  padding: 32rpx 0 16rpx 6rpx !important;
}
/* 功能入口块 */
.func-card {
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: center;
}

.func-card .func {
  padding: 40rpx 24rpx;
  text-align: center;
  font-size: 28rpx;
  color: #595959;
  font-weight: 500;
}

.func text {
  display: block;
}

.func text[class*='icon-'] {
  font-size: 46rpx;
  margin-bottom: 8rpx;
}

/* 活动列表盒子 */
.act-box {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 28rpx;
  margin-top: 20rpx;
}

.sticky {
  position: sticky;
  top: 0rpx;
  z-index: 99;
  /* box-shadow: 0px 0x 10px 0px rgba(0, 0, 0, 0.2); */
  margin-top: -20rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  background-color: #fff;
  /* border-radius: 20rpx; */
}

/* 顶部切换分类 */
.header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  color: #595959;
  background-color: #f4f4f4;
  font-size: 34rpx;
  font-weight: bold;
  border-radius: 20rpx;
  padding: 18rpx 16rpx;
  /* margin-bottom: 20rpx; */
}

.header .cate-item {
  /* position: relative; */
  padding: 14rpx 24rpx;
}

.header .curr-cate {
  /* content: ' ';
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
  width: 100%;
  height: 100%; */
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: inset 5px 5px 10px #e8e8e8,
            inset -5px -5px 10px #ffffff;
}


/* 活动列表 */
.list-box .act-item {
  background-color: #f6f6f6;
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
}

 van-swipe-cell:not(:last-child)  .act-item{
  margin-bottom: 20rpx;
} 

.act-item .title {
  font-size: 40rpx;
  font-weight: 600;
  color: #595959;
  margin-bottom: 10rpx;
}

.act-item .bottom {
  font-size: 32rpx;
  color: #b5b5b5;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.delete-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 65px;
  height: 100%;
  background-color: #ff9797;
  font-size: 32rpx;
  color: #fff;
}

/* 创建活动 */
.input-class {
  background-color: #f0f0f0 !important;
  border-radius: 10rpx !important;
  padding: 12rpx 14rpx !important;
  box-sizing: content-box !important;
  text-align: left !important;
  color: #595959 !important;
  font-size: 34rpx !important;
  height: 50rpx !important;
  line-height: 50rpx;
}

.next-icon {
  font-size: 2.5rem;
  color: #d6e1ff;
  text-align: center;
}

.cell-custom-1 {
  padding-bottom: 0px !important;
  border-bottom: 2px solid #fff;
}

.cell-custom-2 {
  padding-top: 0px !important;
}