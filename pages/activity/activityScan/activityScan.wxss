.scan-container {
  display: flex;
  flex-direction: column;
  overflow-x:hidden;
  justify-content: center;
  align-items: flex-start;
  width: auto;
  /* padding: 20rpx; */
  /* margin: 20rpx 20rpx; */
  border-radius: 16rpx;
  /* background-color: #fff; */
}

.scan-top{
  /* background-color: #fff; */
  height: auto;
  width: 100%;
  border-radius: 16rpx;
}

.top-title{
  background-color: #fff;
  width: auto;
  display: flex;
  height: 140rpx;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 48rpx;
  color: #595959;
  padding: 20rpx;
  margin: 20rpx 0;
}
.top-title .icon {
  width: 60rpx;
  height: 60rpx;
  background-color: #F8F8F8;
  border-radius: 50%;
  text-align: center;
  line-height: 60rpx;
  color: #65a1e1;
  font-size: 30rpx;
  /* font-size: 50rpx; */
}

.top-camera{
  width: 100%;
  height: 800rpx;
}

/* 核销记录 */
.scan-examine-list{
  margin: 20rpx 0;
  width: 100%;
}
.full-redius{
  border-radius: 0 !important;
}
.record {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.record .none{
  background-color: #f0f0f0;
  color: #b5b5b5;
  line-height: 100rpx;
  text-align: center;
  font-weight: 600;
  border-radius: 20rpx;
  height: 100rpx;
  padding: 10rpx 20rpx;
  margin-bottom: 20rpx;
}
.record .rec-item {
  background-color: #f0f0f0;
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
  margin-bottom: 20rpx;
}

.rec-item .title,
.search-res .name {
  font-size: 40rpx;
  font-weight: 600;
  color: #595959;
  margin-bottom: 10rpx;
}

.rec-item .bottom,
.search-res .type {
  font-size: 32rpx;
  color: #b5b5b5;
}

.record .right {
  font-weight: 600;
  margin-right: -20rpx;
  margin-left: 8rpx;
  width: 20rpx;
  border-left: none;
}