/* 筛选列表 */
.search {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}

.search-input {
  display: flex;
  width: 100%;
  background-color: #f0f0f0;
  border-radius: 10rpx !important;
  overflow: hidden;
}
.serach-picker-input{
  display: flex;
  min-height: var(--cell-line-height);
  font-size: 32rpx;
  padding: 14rpx 0 ;
  margin-left: 10rpx;
  color: #b5b5b5 ;
}

.search-btn {
  border-radius: 20rpx !important;
  width: 142rpx !important;
  height: 88rpx !important;
}

.add-input {
  height: 88rpx !important;
  background-color: #f0f0f0 !important;
  padding: 12rpx 14rpx !important;
  text-align: left !important;
  color: #595959 !important;
  font-size: 34rpx !important;
}

.search-res {
  display: flex;
  justify-content: space-between;
  background-color: #f0f0f0;
  border-radius: 20rpx;
  padding: 24rpx 30rpx;
  overflow: hidden;
}

/* 人数 */
.elim-count{
  font-size: 66rpx;
  color: #f37b1d;
  text-shadow: 6rpx 6rpx 8rpx rgba(217, 109, 26, 0.2);
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;

}

/* 核销记录 */
.record {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.record .mini-text{
  font-size: 28rpx;
  color: #b5b5b5;
  font-weight: 400;
  margin-left: 10rpx;
  float: right;
}

.record .rec-item {
  background-color: #f0f0f0;
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.rec-item .title,
.search-res .name {
  font-size: 40rpx;
  font-weight: 600;
  color: #595959;
  margin-bottom: 10rpx;
}
.bottom{
  line-height: 42rpx;
}
.rec-item .bottom,
.search-res .college {
  font-size: 32rpx;
  color: #b5b5b5;
}

.record .right {
  font-weight: 600;
  margin-right: -20rpx;
  margin-left: 8rpx;
}

.record .delete-btn{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 65px;
  height: 100%;
  background-color: #ff9797;
  font-size: 32rpx;
  color: #fff;
}

/* 步进器 */
.stepper-view{
  position: sticky;
  bottom: 30rpx;
  width: 100%;
  text-align: right;
  background-color: rgba(0,0,0,0) !important;
}

.stepper{
  display: inline-block;
  background: #fff;
  padding: 15rpx;
  margin-bottom: 0px !important;
  border-radius: 20rpx;
}