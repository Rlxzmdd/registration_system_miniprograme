.container{
  overflow-x: hidden;
}

.container>view {
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

/* 顶部信息块 */
.top-card .right {
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;
  width: 190rpx;
  border-left: 14rpx solid #d6e1ff;
}

.entrance text {
  display: block;
  text-align: center;
  font-size: 26rpx;
  color: #595959;
  font-weight: 600;
  padding-top: 10rpx;
}


/* 功能入口块 */
.func-card {
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: center;
}

.func-card .func {
  padding: 40rpx 24rpx;
  text-align: center;
  font-size: 28rpx;
  color: #595959;
  font-weight: 500;
}

.func text {
  display: block;
}

.func text[class*='icon-'] {
  font-size: 46rpx;
  margin-bottom: 8rpx;
}


/* 管理员 */
.admin {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.admin>view {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.admin .admin-item {
  text-align: center;
  vertical-align: center;
  background-color: #f0f0f0;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
}

.admin .admin-item:not(:first-child) {
  margin-left: 20rpx;
}

.admin .admin-item .name {
  font-size: 40rpx;
  color: #595959;
  font-weight: 600;
}

.admin .admin-item .count {
  font-size: 32rpx;
  color: #b5b5b5;
  font-weight: bold;
}

.admin .right {
  font-weight: 600;
  margin-right: -20rpx;
  margin-left: 8rpx;
  width: 20rpx;
  border-left: none;
}

/* 核销记录 */
.record {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.record .none {
  background-color: #f0f0f0;
  color: #b5b5b5;
  line-height: 100rpx;
  text-align: center;
  font-weight: 600;
  border-radius: 20rpx;
  height: 100rpx;
  padding: 10rpx 20rpx;
  margin-bottom: 20rpx;
}

.record .rec-item {
  background-color: #f0f0f0;
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
  margin-bottom: 20rpx;
}

.rec-item .title,
.search-res .name {
  font-size: 40rpx;
  font-weight: 600;
  color: #595959;
  margin-bottom: 10rpx;
}

.rec-item .bottom,
.search-res .type {
  font-size: 32rpx;
  color: #b5b5b5;
}

.record .right {
  font-weight: 600;
  margin-right: -20rpx;
  margin-left: 8rpx;
  width: 20rpx;
  border-left: none;
}

/* 修改活动 */
.input-class {
  background-color: #f0f0f0 !important;
  border-radius: 10rpx !important;
  padding: 12rpx 14rpx !important;
  text-align: left !important;
  color: #595959 !important;
  font-size: 34rpx !important;
  height: 60rpx !important;
}

.next-icon {
  font-size: 2.5rem;
  color: #d6e1ff;
  text-align: center;
}

.cell-custom-1 {
  padding-bottom: 0px !important;
  border-bottom: 2px solid #fff;
}

.cell-custom-2 {
  padding-top: 0px !important;
}

/* 搜索添加 */
.search {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}

.search-input {
  display: flex;
  width: 100%;
  background-color: #f0f0f0;
  border-radius: 10rpx !important;
  margin-right: 20rpx;
  overflow: hidden;
}

.search-btn {
  border-radius: 20rpx !important;
  width: 142rpx !important;
  height: 88rpx !important;
}

.add-input {
  height: 88rpx !important;
  background-color: #f0f0f0 !important;
  padding: 12rpx 14rpx !important;
  text-align: left !important;
  color: #595959 !important;
  font-size: 34rpx !important;
}

.search-res {
  display: flex;
  justify-content: space-between;
  background-color: #f0f0f0;
  border-radius: 20rpx;
  padding: 24rpx 30rpx;
  overflow: hidden;
}

/* 核销数据列表 */
.elim-data {
  font-size: 28rpx;
  color: #8799a3;
}

.elim-data .title {
  padding: 10rpx 0;
  font-size: 32rpx;
  font-weight: 600; 
}

.list .row{
  width: 100%;
  padding: 10rpx 0;
}

.elim-data .title>text,
.elim-data .list .row>text {
  flex: 1;
  text-align: center;
}

/* 核销人数折线图 */
.u-canvas {
  width: 450px; 
  height: 212px;
}

.line-chart{
  width: calc(100% - 28rpx);
}