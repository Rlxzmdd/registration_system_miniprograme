.all-box {
  background-color: #F0F0F0;
  padding-bottom: 30rpx;
  overflow-x: hidden;
}

/* 顶部切换分类 */
.header-box {
  background-color: #fff;
  border-radius: 0 0 24rpx 24rpx;
  padding: 20rpx;
  box-shadow: 0px 2rpx 4rpx 0px rgba(198, 198, 198, 0.5);
}

.header {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  height: 100rpx;
  color: #595959;
  background-color: #f4f4f4;
  font-size: 34rpx;
  font-weight: bold;
  border-radius: 20rpx;
}

.header .curr-cate {
  color: #65A1E1;
}

/* 详细信息表 */
swiper {
  height: calc(100vh - 600rpx);
  margin: 20rpx;
  border-radius: 16rpx;
}

.info-container {
  margin: 20rpx;
  border-radius: 16rpx;
}

.info-table {
  background: #fff;
  padding: 20rpx;
  margin-top: 0;
  border-radius: 16rpx;
}

.info-table>view {
  padding: 20rpx;
  border-bottom: 1px solid #F8F8F8;
  word-break: break-all;
}

.info-table .img-box {
  width: 180rpx;
  height: 230rpx;
  background: #C7CBD5;
  border-radius: 16rpx;
  overflow: hidden;
}

.info-table image{
  width: 100%;
  height: 100%;
}

.info-table>view>text:nth-child(1) {
  font-size: 32rpx;
  font-weight: 600;
  flex: 1;
}

.info-table>view>text:nth-child(2) {
  font-size: 32rpx;
  /* color: #CACACA; */
  flex: 3;
  text-align: right;
}